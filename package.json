{
  "name": "typengine",
  "version": "0.0.2",
  "description": "Core library for building typing apps and games.",
  "keywords": [
    "japanese",
    "keyboard",
    "romaji",
    "typing",
    "typing-game",
    "typing-practice"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "test": "node --test lib/**/*.test.ts",
    "typecheck": "tsgo --noEmit",
    "lint": "oxlint . && oxfmt --check .",
    "fix": "oxlint . --fix && oxfmt --write .",
    "ready": "pnpm fix && pnpm typecheck && pnpm test",
    "ready:check": "pnpm lint && pnpm typecheck && pnpm test",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251226.1",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.8.1"
}
